type User {
  id: ID! @unique
  name: String!
  email: String! @unique
  password: String!
  createdAt: DateTime!
  updatedAt: DateTime!
}

type Image {
  id: ID! @unique
  cloudinary_id: String! @unique
  name: String!
  height: Int!
  width: Int!
  transformation: String!
  image_url: String!
  large_image_url: String!
  user: User!
  product: Product
  variants: [Variant]
  createdAt: DateTime!
  updatedAt: DateTime!
}

type Product {
  id: ID! @unique
  department: String!
  title: String!
  description: String!
  online: Boolean!
  category: String
  brand: String
  user: User!
  image: Image!
  variants: [Variant!]! @relation(name: "ProductVariants", onDelete: CASCADE)
  createdAt: DateTime!
  updatedAt: DateTime!
}

type Variant {
  id: ID! @unique
  price: Float!
  quantity: Int! @default(value: 1)
  availability: String @default(value: "1 in Stock!")
  color: String
  size: String
  sale: Boolean! @default(value: false)
  salePrice: Float! @default(value: 1.00)
  product: Product! @relation(name: "ProductVariants")
  image: Image!
  createdAt: DateTime!
  updatedAt: DateTime!
}
